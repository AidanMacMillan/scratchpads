{
    "name": "scratchpads",
    "displayName": "Scratchpads",
    "description": "Create multiple scratchpad files of different file types",
    "version": "0.0.1",
    "publisher": "buenonadav",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.newScratchpad",
        "onCommand:extension.removeScratchpads"
    ],
    "main": "./src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Scratchpads configuration",
            "properties": {
                "scratchpads.promptForRemoval": {
                    "type": "boolean",
                    "default": true,
                    "description": "Prompt the user when removing scratchpads"
                }
            }
        },
        "commands": [{
                "command": "extension.newScratchpad",
                "title": "Scratchpads: New scratchpad"
            },
            {
                "command": "extension.removeScratchpads",
                "title": "Scratchpads: Remove scratchpads"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "md5": "^2.2.1"
    }
}